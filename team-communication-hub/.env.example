# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/team_communication_hub"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Redis (for caching and real-time features)
REDIS_URL="redis://localhost:6379"

# File Upload
UPLOAD_MAX_SIZE=26214400  # 25MB
UPLOAD_ALLOWED_TYPES="image/*,video/*,audio/*,application/pdf,text/*,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket"
AWS_S3_REGION="us-east-1"

# Email (for notifications)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
FROM_EMAIL="noreply@yourapp.com"

# Application
APP_NAME="Team Communication Hub"
APP_URL="http://localhost:3000"

# Websocket
WEBSOCKET_PORT=3001

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Analytics (optional)
GOOGLE_ANALYTICS_ID=""

# Stripe (for billing)
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Development
NODE_ENV="development"
LOG_LEVEL="debug"