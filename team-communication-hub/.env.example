# Team Communication Hub - Environment Variables
# Copy this file to .env.local and fill in your values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/team_communication"
DATABASE_NAME="team_communication"
DATABASE_USER="postgres"
DATABASE_PASSWORD="password"
DATABASE_PORT="5432"

# ==============================================
# REDIS CONFIGURATION  
# ==============================================
REDIS_URL="redis://:redispassword@localhost:6379"
REDIS_PASSWORD="redispassword"
REDIS_PORT="6379"

# ==============================================
# NEXTAUTH CONFIGURATION
# ==============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-very-secure-secret-key-here-change-this-in-production"

# ==============================================
# OAUTH PROVIDERS
# ==============================================
# Google OAuth (Get from: https://console.developers.google.com/)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (Get from: https://github.com/settings/developers)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ==============================================
# AI FEATURES (OPENAI)
# ==============================================
# OpenAI API Key (Get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# ==============================================
# FILE STORAGE (AWS S3) - Optional
# ==============================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# ==============================================
# EMAIL CONFIGURATION - Optional
# ==============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV="development"
APP_PORT="3000"
NGINX_PORT="80"
NGINX_SSL_PORT="443"

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# pgAdmin (Database Admin)
PGADMIN_EMAIL="admin@teamcomm.local"
PGADMIN_PASSWORD="admin"
PGADMIN_PORT="5050"

# Redis Commander (Redis Admin)
REDIS_COMMANDER_USER="admin"
REDIS_COMMANDER_PASSWORD="admin"
REDIS_COMMANDER_PORT="8081"

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Secret for Socket.io authentication
JWT_SECRET="your-jwt-secret-same-as-nextauth-secret"

# Rate limiting
RATE_LIMIT_MESSAGES_PER_MINUTE="60"
RATE_LIMIT_API_CALLS_PER_MINUTE="100"

# ==============================================
# MONITORING AND LOGGING
# ==============================================
# Enable detailed logging
LOG_LEVEL="info"
ENABLE_QUERY_LOGGING="false"

# Error tracking (optional - Sentry)
SENTRY_DSN="your-sentry-dsn"

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_AI_FEATURES="true"
ENABLE_VIDEO_CALLS="true"
ENABLE_FILE_UPLOADS="true"
ENABLE_ANALYTICS="true"

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================
# For production deployment
DOMAIN="your-domain.com"
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/private.key"

# Docker configuration
DOCKER_REGISTRY="your-registry"
IMAGE_TAG="latest"