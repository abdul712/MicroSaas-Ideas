# FraudShield Environment Configuration

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://fraudshield:securepassword123@localhost:5432/fraudshield
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://:redispassword123@localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# InfluxDB Configuration (Time Series Data)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=influxtoken123456789
INFLUXDB_ORG=fraudshield
INFLUXDB_BUCKET=transactions

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=fraudshield-app
KAFKA_AUTO_COMMIT_INTERVAL=1000
KAFKA_SESSION_TIMEOUT=30000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30
BCRYPT_ROUNDS=12

# Encryption Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
DATA_TOKENIZATION_KEY=another-32-byte-key-for-tokenization

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8001
MODEL_CACHE_TTL=3600
FEATURE_STORE_TTL=300
MODEL_RETRAIN_INTERVAL=86400
MODEL_ACCURACY_THRESHOLD=0.95

# Rules Engine Configuration
RULES_ENGINE_URL=http://localhost:3001
DEFAULT_RISK_THRESHOLD=75
HIGH_RISK_THRESHOLD=85
AUTO_DECLINE_THRESHOLD=95

# External Service Integration
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Payment Processor APIs
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
SQUARE_APPLICATION_ID=your_square_application_id
SQUARE_ACCESS_TOKEN=your_square_access_token

# E-commerce Platform Integration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
WOOCOMMERCE_CONSUMER_KEY=your_woocommerce_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_woocommerce_consumer_secret

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@fraudshield.com
SMTP_FROM_NAME=FraudShield

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENDPOINT=/metrics

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/fraudshield/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_BEHAVIORAL_ANALYTICS=true
ENABLE_DEVICE_FINGERPRINTING=true
ENABLE_VELOCITY_CHECKS=true
ENABLE_GEOGRAPHIC_ANALYSIS=true
ENABLE_EMAIL_VALIDATION=true
ENABLE_PHONE_VALIDATION=true
ENABLE_SOCIAL_MEDIA_VERIFICATION=false

# Performance Configuration
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30
BATCH_PROCESSING_SIZE=1000
WORKER_PROCESSES=4

# Data Retention Configuration
TRANSACTION_DATA_RETENTION_DAYS=2555  # 7 years for PCI compliance
LOG_DATA_RETENTION_DAYS=90
METRICS_DATA_RETENTION_DAYS=365

# Alert Configuration
ALERT_EMAIL_RECIPIENTS=admin@fraudshield.com,security@fraudshield.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
ALERT_THRESHOLD_HIGH_RISK_VOLUME=100
ALERT_THRESHOLD_MODEL_ACCURACY_DROP=0.05

# Development/Testing Configuration
MOCK_EXTERNAL_APIS=false
ENABLE_TEST_DATA_GENERATION=true
TEST_TRANSACTION_VOLUME=1000
FAKER_SEED=12345

# PCI DSS Compliance Configuration
ENABLE_DATA_MASKING=true
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_YEARS=7
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true

# Business Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD
MIN_TRANSACTION_AMOUNT=0.01
MAX_TRANSACTION_AMOUNT=50000

# Rate Limiting Configuration
RATE_LIMIT_REDIS_PREFIX=fraudshield_rate_limit
RATE_LIMIT_SKIP_SUCCESSFUL=true
RATE_LIMIT_STORE_TYPE=redis

# Cache Configuration
CACHE_DEFAULT_TTL=300
CACHE_FEATURES_TTL=60
CACHE_MODELS_TTL=3600
CACHE_RULES_TTL=1800

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=60
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_HISTORICAL_ANALYTICS=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_if_using