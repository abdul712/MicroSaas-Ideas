# FraudShield Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql://fraudshield:secure_password_change_me@postgres:5432/fraudshield
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_PASSWORD=redis_secure_change_me
REDIS_URL=redis://:redis_secure_change_me@redis:6379/0
REDIS_EXPIRE_SECONDS=3600
REDIS_MAX_CONNECTIONS=50

# Security Settings
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# InfluxDB Configuration
INFLUXDB_PASSWORD=admin_password_change_me
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-influxdb-admin-token
INFLUXDB_ORG=fraudshield
INFLUXDB_BUCKET=fraud_analytics

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_FRAUD_TOPIC=fraud_events
KAFKA_ALERT_TOPIC=fraud_alerts

# ML Service Configuration
ML_SERVICE_URL=http://ml-service:8001
ML_SERVICE_TIMEOUT=30
ML_INFERENCE_TIMEOUT=5

# Fraud Detection Thresholds
FRAUD_THRESHOLD_LOW=30.0
FRAUD_THRESHOLD_MEDIUM=60.0
FRAUD_THRESHOLD_HIGH=80.0

# Feature Engineering
FEATURE_CACHE_TTL=300
BEHAVIORAL_ANALYSIS_DAYS=30
VELOCITY_CHECK_HOURS=24

# Model Configuration
MODEL_CACHE_SIZE=100
MODEL_REFRESH_INTERVAL=3600

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=
GRAFANA_PASSWORD=admin_password_change_me

# External Services (Optional)
GEOIP_DATABASE_PATH=/app/data/geoip/GeoLite2-City.mmdb
EMAIL_VALIDATION_API_KEY=
DEVICE_FINGERPRINT_API_KEY=

# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Performance Settings
ASYNC_TIMEOUT=30
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30
THREAD_POOL_SIZE=10

# CORS Settings
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Production Overrides (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=40
# REDIS_MAX_CONNECTIONS=100