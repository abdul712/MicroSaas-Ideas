# ===========================================
# Website Heatmap Tool - Environment Configuration
# ===========================================

# Application Environment
NODE_ENV=development
LOG_LEVEL=debug

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://heatmap_user:heatmap_password@localhost:5432/heatmap_db
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (Cache & Session Store)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER_MODE=false

# ClickHouse (Analytics Database)
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=heatmap_analytics
CLICKHOUSE_USERNAME=heatmap_user
CLICKHOUSE_PASSWORD=heatmap_password
CLICKHOUSE_MAX_CONNECTIONS=10

# ===========================================
# MESSAGE QUEUE CONFIGURATION
# ===========================================

# Apache Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=heatmap-tool
KAFKA_GROUP_ID=heatmap-processors
KAFKA_RETRY_ATTEMPTS=3
KAFKA_BATCH_SIZE=16384
KAFKA_LINGER_MS=5

# Kafka Topics
KAFKA_TOPIC_EVENTS=user-events
KAFKA_TOPIC_ANALYTICS=analytics-processed
KAFKA_TOPIC_ALERTS=system-alerts

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# ===========================================
# API CONFIGURATION
# ===========================================

# API Gateway
API_GATEWAY_URL=http://localhost:8000
API_RATE_LIMIT_WINDOW=15m
API_RATE_LIMIT_MAX=1000

# Service URLs
EVENT_COLLECTION_URL=http://localhost:3001
ANALYTICS_PROCESSING_URL=http://localhost:3002
HEATMAP_GENERATION_URL=http://localhost:3003
USER_MANAGEMENT_URL=http://localhost:3004
PRIVACY_SERVICE_URL=http://localhost:3005
AI_INSIGHTS_URL=http://localhost:3006

# ===========================================
# CDN & STORAGE CONFIGURATION
# ===========================================

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=heatmap-tool-assets
AWS_S3_BUCKET_SCREENSHOTS=heatmap-tool-screenshots

# CloudFlare (CDN)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# ===========================================
# PAYMENT PROCESSING
# ===========================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_ID_STARTER=price_your_starter_price_id
STRIPE_PRICE_ID_PROFESSIONAL=price_your_professional_price_id
STRIPE_PRICE_ID_BUSINESS=price_your_business_price_id

# ===========================================
# EMAIL SERVICES
# ===========================================

# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Website Heatmap Tool

# Mailgun (Alternative)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Next.js
NEXT_PUBLIC_APP_NAME=Website Heatmap Tool
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# Analytics & Tracking
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_URL=http://localhost:3001
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# DataDog (Optional)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# ===========================================
# AI & MACHINE LEARNING
# ===========================================

# OpenAI (for AI insights)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# TensorFlow Models
TENSORFLOW_MODELS_PATH=/app/models
ML_MODEL_UPDATE_INTERVAL=24h

# ===========================================
# PRIVACY & COMPLIANCE
# ===========================================

# GDPR/CCPA Compliance
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=365

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
SALT_ROUNDS=12

# ===========================================
# FEATURE FLAGS
# ===========================================

# Feature Toggles
FEATURE_SESSION_REPLAY=true
FEATURE_AI_INSIGHTS=true
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_WHITE_LABEL=false
FEATURE_MOBILE_APP=false

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================

# Test Database
TEST_DATABASE_URL=postgresql://heatmap_user:heatmap_password@localhost:5432/heatmap_test_db

# Mock Services
MOCK_PAYMENT_PROCESSING=true
MOCK_EMAIL_SENDING=true
MOCK_SMS_SENDING=true

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true
PROFILE_PERFORMANCE=false

# ===========================================
# PRODUCTION OVERRIDES
# (Uncomment and modify for production deployment)
# ===========================================

# NODE_ENV=production
# LOG_LEVEL=info
# DATABASE_SSL=true
# REDIS_CLUSTER_MODE=true
# API_RATE_LIMIT_MAX=100
# MOCK_PAYMENT_PROCESSING=false
# MOCK_EMAIL_SENDING=false
# DEBUG_MODE=false
# VERBOSE_LOGGING=false

# ===========================================
# SECURITY HEADERS
# ===========================================

# Content Security Policy
CSP_SCRIPT_SRC="'self' 'unsafe-inline' https://js.stripe.com"
CSP_STYLE_SRC="'self' 'unsafe-inline' https://fonts.googleapis.com"
CSP_IMG_SRC="'self' data: https:"
CSP_CONNECT_SRC="'self' https://api.stripe.com"

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================

# Subscription Plans
PLAN_STARTER_MONTHLY_PRICE=19
PLAN_PROFESSIONAL_MONTHLY_PRICE=49
PLAN_BUSINESS_MONTHLY_PRICE=99

# Usage Limits
LIMIT_WEBSITES_STARTER=1
LIMIT_WEBSITES_PROFESSIONAL=5
LIMIT_WEBSITES_BUSINESS=20
LIMIT_PAGEVIEWS_STARTER=10000
LIMIT_PAGEVIEWS_PROFESSIONAL=50000
LIMIT_PAGEVIEWS_BUSINESS=200000

# Support Configuration
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_CHAT_ENABLED=true
DOCUMENTATION_URL=https://docs.yourdomain.com