# Environment Configuration - Website Heatmap Tool
# Copy this to .env and update with your values

# Application Settings
NODE_ENV=development
APP_NAME="Heatmap Analytics"
APP_URL=http://localhost:3000
API_URL=http://localhost/api

# Database Configuration
DATABASE_URL=postgresql://heatmap_user:dev_password_2024@localhost:5432/heatmap_analytics
POSTGRES_DB=heatmap_analytics
POSTGRES_USER=heatmap_user
POSTGRES_PASSWORD=dev_password_2024

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ClickHouse Configuration
CLICKHOUSE_URL=http://analytics_user:analytics_password_2024@localhost:8123/analytics
CLICKHOUSE_DB=analytics
CLICKHOUSE_USER=analytics_user
CLICKHOUSE_PASSWORD=analytics_password_2024

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=heatmap-analytics
KAFKA_GROUP_ID=heatmap-consumer-group

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
SESSION_SECRET=your-session-secret-key-change-this-in-production

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@heatmapanalytics.com

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=heatmap-screenshots
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# CDN Configuration
CDN_URL=https://cdn.heatmapanalytics.com
TRACKING_SCRIPT_CDN=https://track.heatmapanalytics.com

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Analytics & Tracking
GA_TRACKING_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
HOTJAR_ID=your-hotjar-id

# Feature Flags
ENABLE_SESSION_REPLAY=true
ENABLE_AI_INSIGHTS=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_TEAM_COLLABORATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
TRACKING_RATE_LIMIT=10000

# Privacy & Compliance
ENABLE_GDPR_MODE=true
ENABLE_CCPA_MODE=true
DEFAULT_DATA_RETENTION_DAYS=365
ENABLE_IP_ANONYMIZATION=true

# Performance Settings
CACHE_TTL_SECONDS=300
HEATMAP_GENERATION_TIMEOUT=30000
SESSION_REPLAY_MAX_DURATION=3600
MAX_EVENTS_PER_SESSION=10000

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Development Settings
ENABLE_CORS=true
ENABLE_DEBUG_LOGS=false
MOCK_STRIPE_WEBHOOK=false
BYPASS_AUTHENTICATION=false

# Testing
TEST_DATABASE_URL=postgresql://heatmap_user:dev_password_2024@localhost:5432/heatmap_analytics_test
TEST_REDIS_URL=redis://localhost:6379/1

# Deployment
DOCKER_REGISTRY=your-docker-registry.com
KUBERNETES_NAMESPACE=heatmap-analytics
HELM_CHART_VERSION=1.0.0