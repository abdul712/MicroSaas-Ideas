{
  "name": "@heatmap-tool/sdk",
  "version": "1.0.0",
  "description": "Lightweight JavaScript SDK for Website Heatmap Tool tracking",
  "main": "dist/heatmap-sdk.js",
  "module": "dist/heatmap-sdk.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "npm run clean && rollup -c",
    "build:dev": "npm run clean && rollup -c --environment NODE_ENV:development",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "size": "bundlesize",
    "analyze": "npm run build && bundlesize"
  },
  "keywords": [
    "heatmap",
    "analytics",
    "tracking",
    "user-behavior",
    "click-tracking",
    "scroll-tracking",
    "privacy-first"
  ],
  "author": "HeatmapTool Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "bundlesize": "^0.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "bundlesize": [
    {
      "path": "./dist/heatmap-sdk.js",
      "maxSize": "10 kB",
      "compression": "gzip"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/examples/**"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}