{
  "name": "@heatmap-analytics/sdk",
  "version": "1.0.0",
  "description": "Lightweight JavaScript SDK for Heatmap Analytics (<10KB)",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:analyze": "npm run build && bundlesize",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "size": "bundlesize"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-replace": "^5.0.5",
    "rollup": "^4.1.4",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.6",
    "ts-jest": "^29.1.1",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "bundlesize": "^0.18.1",
    "jsdom": "^22.1.0"
  },
  "bundlesize": [
    {
      "path": "dist/index.umd.js",
      "maxSize": "10KB",
      "compression": "gzip"
    }
  ],
  "keywords": [
    "heatmap",
    "analytics",
    "tracking",
    "user-behavior",
    "javascript",
    "sdk",
    "privacy-compliant"
  ],
  "author": "Heatmap Analytics Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abdul712/MicroSaas-Ideas"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}