{
  "name": "website-heatmap-tool",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-grade Website Heatmap and User Behavior Analytics Platform",
  "workspaces": [
    "frontend",
    "backend/*",
    "sdk",
    "infrastructure"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend/api-gateway && npm run dev",
    "build": "npm run build:frontend && npm run build:backend && npm run build:sdk",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "npm run build:services",
    "build:services": "cd backend && npm run build:all",
    "build:sdk": "cd sdk && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:sdk",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm run test:all",
    "test:sdk": "cd sdk && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:sdk",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint:all",
    "lint:sdk": "cd sdk && npm run lint",
    "setup": "npm install && npm run setup:services",
    "setup:services": "cd backend && npm run setup:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}