# ExpenseTracker Pro - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
BASE_URL=http://localhost:3000
APP_NAME="ExpenseTracker Pro"
LOG_LEVEL=info

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL database URL for Prisma
DATABASE_URL="postgresql://postgres:password123@localhost:5432/expensetracker"

# Database credentials (used by Docker Compose)
DATABASE_NAME=expensetracker
DATABASE_USER=postgres
DATABASE_PASSWORD=password123
DATABASE_PORT=5432

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Redis URL for caching and sessions
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=redispass123
REDIS_PORT=6379

# ==============================================
# AUTHENTICATION (NextAuth.js)
# ==============================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-at-least-32-characters-long

# ==============================================
# OAUTH PROVIDERS
# ==============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==============================================
# FILE STORAGE (AWS S3)
# ==============================================
# Storage provider: 'local' for development, 's3' for production
STORAGE_PROVIDER=local

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=expensetracker-receipts

# Local storage directory (when using local storage)
UPLOAD_DIR=./uploads

# ==============================================
# OCR SERVICES
# ==============================================
# OCR provider: 'tesseract' for local, 'google-vision' for cloud
OCR_PROVIDER=tesseract

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json

# ==============================================
# PAYMENT PROCESSING (Stripe)
# ==============================================
# Stripe configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ==============================================
# EMAIL SERVICE (SendGrid)
# ==============================================
# SendGrid for transactional emails
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@expensetracker.pro
SENDGRID_FROM_NAME="ExpenseTracker Pro"

# ==============================================
# SECURITY & ENCRYPTION
# ==============================================
# Encryption key for sensitive data (must be 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# JWT configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=30d

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-url

# Application monitoring
ENABLE_ANALYTICS=true
ANALYTICS_ID=your-analytics-id

# ==============================================
# RATE LIMITING
# ==============================================
# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==============================================
# FEATURE FLAGS
# ==============================================
# Feature toggles
FEATURE_OCR_ENABLED=true
FEATURE_REAL_TIME_ENABLED=true
FEATURE_MULTI_TENANT_ENABLED=true
FEATURE_ADVANCED_ANALYTICS_ENABLED=true

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Development and debugging
DEBUG_MODE=false
ENABLE_QUERY_LOGGING=false
ENABLE_PRISMA_STUDIO=false

# Testing
TEST_DATABASE_URL="postgresql://postgres:password123@localhost:5432/expensetracker_test"

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# Production-specific settings (set these in production)
# NODE_ENV=production
# DATABASE_URL=your-production-database-url
# REDIS_URL=your-production-redis-url
# NEXTAUTH_URL=https://your-domain.com
# STORAGE_PROVIDER=s3
# OCR_PROVIDER=google-vision

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
# Docker-specific environment variables
APP_PORT=3000
POSTGRES_DB=${DATABASE_NAME}
POSTGRES_USER=${DATABASE_USER}
POSTGRES_PASSWORD=${DATABASE_PASSWORD}