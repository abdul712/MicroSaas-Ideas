# Local Business Review Manager - Environment Variables

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/reviewmanager"
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-jwt-signing-key-change-this-in-production"

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================

# Google OAuth (required for Google My Business integration)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Facebook OAuth (for Facebook reviews integration)
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI for AI-powered response generation and sentiment analysis
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Yelp Fusion API for Yelp reviews
YELP_API_KEY="your-yelp-fusion-api-key"

# TripAdvisor API (if available)
TRIPADVISOR_API_KEY="your-tripadvisor-api-key"

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Twilio for SMS notifications and review invitations
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# SendGrid for email notifications and invitations
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourcompany.com"
SENDGRID_FROM_NAME="Review Manager"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption key for storing sensitive data (API tokens, passwords)
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# JWT settings
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRY="7d"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_AI_RESPONSES=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_ENDPOINTS=true
ENABLE_REVIEW_INVITATIONS=true

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Sentry for error tracking (optional)
SENTRY_DSN="your-sentry-dsn-here"

# Analytics (optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# File upload settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="./uploads"

# AWS S3 (optional for file storage)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"

# =============================================================================
# PAYMENT PROCESSING (Optional - for subscription features)
# =============================================================================

# Stripe for subscription billing
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Next.js settings
NEXT_TELEMETRY_DISABLED=1
NODE_ENV="development"

# Database settings for development
DB_LOGGING=true
DB_SYNC=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Domain and SSL
DOMAIN="yourdomain.com"
SSL_ENABLED=true

# CORS settings
CORS_ORIGIN="https://yourdomain.com"

# Security headers
ENABLE_HELMET=true
ENABLE_CORS=true

# =============================================================================
# BUSINESS LOGIC CONFIGURATION
# =============================================================================

# Review monitoring intervals (in minutes)
REVIEW_SYNC_INTERVAL=15
SENTIMENT_ANALYSIS_BATCH_SIZE=50

# AI response settings
AI_RESPONSE_MAX_LENGTH=500
AI_RESPONSE_TEMPERATURE=0.7

# Notification settings
EMAIL_NOTIFICATION_DELAY=5  # minutes
SMS_NOTIFICATION_DELAY=1    # minutes

# Review invitation settings
INVITATION_EXPIRY_DAYS=30
MAX_INVITATION_REMINDERS=2

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis cache TTL settings (in seconds)
CACHE_TTL_SHORT=300     # 5 minutes
CACHE_TTL_MEDIUM=1800   # 30 minutes
CACHE_TTL_LONG=3600     # 1 hour

# Session settings
SESSION_TTL=604800      # 7 days

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Cleanup settings
CLEANUP_OLD_LOGS_DAYS=30
CLEANUP_OLD_SESSIONS_DAYS=7

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env.local for development
# 2. Copy this file to .env for production
# 3. Replace all placeholder values with your actual credentials
# 4. Never commit actual environment files to version control
# 5. Keep production secrets secure and rotate them regularly

# Required for basic functionality:
# - DATABASE_URL
# - REDIS_URL
# - NEXTAUTH_SECRET
# - OPENAI_API_KEY (for AI features)

# Required for full functionality:
# - Google OAuth credentials
# - Twilio credentials (for SMS)
# - SendGrid credentials (for email)
# - Platform API keys (Yelp, Facebook, etc.)

# Security Notes:
# - Use strong, unique passwords and secrets
# - Enable 2FA on all service accounts
# - Regularly rotate API keys and secrets
# - Use environment-specific configurations
# - Monitor API usage and billing