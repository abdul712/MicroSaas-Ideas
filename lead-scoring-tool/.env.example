# Lead Scoring Tool - Environment Configuration Template
# Copy this file to .env and configure with your actual values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENV=development

# Application
APP_NAME=Lead Scoring Tool
APP_VERSION=1.0.0
APP_DEBUG=true

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-change-this
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lead_scoring
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lead_scoring
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL_MODE=prefer
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis (Cache & Sessions)
REDIS_URL=redis://:redis-password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis-password
REDIS_DB=0
REDIS_SSL=false

# ClickHouse (Analytics)
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=clickhouse

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================

# Apache Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# Kafka Topics
KAFKA_TOPIC_LEAD_EVENTS=lead-events
KAFKA_TOPIC_SCORE_EVENTS=score-events
KAFKA_TOPIC_USER_EVENTS=user-events
KAFKA_TOPIC_AUDIT_EVENTS=audit-events

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# ML Services
ML_SERVICE_URL=http://localhost:8001
ML_MODEL_STORE_PATH=/app/models
ML_DATA_PATH=/app/data

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=lead-scoring
MLFLOW_MODEL_REGISTRY_URI=

# TensorFlow
TF_CPP_MIN_LOG_LEVEL=2
CUDA_VISIBLE_DEVICES=

# Model Configuration
DEFAULT_SCORING_MODEL=xgboost_v1
MODEL_RETRAIN_INTERVAL_HOURS=24
MODEL_PERFORMANCE_THRESHOLD=0.85

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Sendgrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Lead Scoring Tool

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Stripe (Payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_ID_STARTER=price_starter_plan_id
STRIPE_PRICE_ID_PROFESSIONAL=price_professional_plan_id
STRIPE_PRICE_ID_BUSINESS=price_business_plan_id

# =============================================================================
# CRM INTEGRATIONS
# =============================================================================

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_SANDBOX=true

# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret

# Pipedrive
PIPEDRIVE_API_TOKEN=your-pipedrive-api-token
PIPEDRIVE_COMPANY_DOMAIN=your-company

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Prometheus
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/application.log

# =============================================================================
# CLOUD PROVIDER CONFIGURATION
# =============================================================================

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=your-gcs-bucket-name

# Azure
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_CONTAINER_NAME=your-container-name

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# GDPR/CCPA Compliance
DATA_RETENTION_DAYS=2555  # 7 years
ANONYMIZATION_ENABLED=true
CONSENT_TRACKING_ENABLED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_SCORING=true
FEATURE_ML_EXPLANATIONS=true
FEATURE_WEBHOOK_NOTIFICATIONS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_API_V2=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Development
DEV_CORS_ENABLED=true
DEV_AUTO_RELOAD=true
DEV_DEBUG_TOOLBAR=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lead_scoring_test
TEST_REDIS_URL=redis://localhost:6379/15

# Jupyter Notebook
JUPYTER_ENABLE_LAB=true
JUPYTER_TOKEN=your-jupyter-token
JUPYTER_PORT=8888

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker
DOCKER_REGISTRY=localhost:5000
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=lead-scoring
K8S_INGRESS_HOST=localhost
K8S_TLS_SECRET_NAME=tls-secret

# Health Checks
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_RETRIES=3

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# API Performance
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# Database Performance
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache Performance
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER_SESSION=3600
CACHE_TTL_SCORING_RESULTS=1800

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# ANALYTICS & METRICS
# =============================================================================

# Google Analytics
GA_TRACKING_ID=UA-your-tracking-id
GA_ENHANCED_ECOMMERCE=true

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token
MIXPANEL_ENABLED=false

# Amplitude
AMPLITUDE_API_KEY=your-amplitude-api-key
AMPLITUDE_ENABLED=false

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Slack
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#lead-scoring-alerts
SLACK_ENABLED=true

# Discord
DISCORD_WEBHOOK_URL=your-discord-webhook-url
DISCORD_ENABLED=false

# Microsoft Teams
TEAMS_WEBHOOK_URL=your-teams-webhook-url
TEAMS_ENABLED=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom Business Rules
LEAD_SCORE_MIN=0
LEAD_SCORE_MAX=100
LEAD_SCORE_HOT_THRESHOLD=80
LEAD_SCORE_WARM_THRESHOLD=60
LEAD_SCORE_COLD_THRESHOLD=40

# Scoring Weights
WEIGHT_DEMOGRAPHIC=0.3
WEIGHT_BEHAVIORAL=0.4
WEIGHT_FIT=0.3

# Automatic Actions
AUTO_ASSIGN_HOT_LEADS=true
AUTO_NURTURE_WARM_LEADS=true
AUTO_ARCHIVE_COLD_LEADS_DAYS=90