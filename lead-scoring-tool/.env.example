# Lead Scoring Tool - Environment Configuration Template
# Copy this file to .env and update with your specific values

##@ Application Settings
APP_NAME=Lead Scoring Tool
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

##@ Database Configuration
# PostgreSQL - Primary Database
DATABASE_URL=postgresql://leadscoring:password@postgres:5432/lead_scoring_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=lead_scoring_db
DATABASE_USER=leadscoring
DATABASE_PASSWORD=password
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis - Cache and Real-time Data
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ClickHouse - Analytics Database  
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=password

##@ Security Configuration
# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Encryption Keys
ENCRYPTION_KEY=32-char-base64-encoded-encryption-key
API_KEY_SALT=your-api-key-salt-for-hashing

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

##@ External Service URLs
# Microservice Communication
BACKEND_URL=http://backend:8000
ML_SERVICE_URL=http://ml-service:8001
INTEGRATION_SERVICE_URL=http://integration-service:8002
FRONTEND_URL=http://localhost:3000

##@ Machine Learning Configuration
# MLflow Model Registry
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_S3_ACCESS_KEY_ID=minio
MLFLOW_S3_SECRET_ACCESS_KEY=minio123

# Model Configuration
MODEL_REGISTRY_PATH=/app/models
MODEL_CACHE_SIZE=100
MODEL_INFERENCE_TIMEOUT=5
MODEL_UPDATE_INTERVAL=3600

# Feature Store
FEATURE_STORE_BACKEND=redis
FEATURE_TTL_SECONDS=86400

##@ Message Queue Configuration
# Apache Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_LEAD_EVENTS=lead-events
KAFKA_TOPIC_SCORE_UPDATES=score-updates  
KAFKA_CONSUMER_GROUP=lead-scoring-app
KAFKA_AUTO_OFFSET_RESET=latest

##@ Monitoring and Observability
# Prometheus Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Distributed Tracing
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=14268
JAEGER_SERVICE_NAME=lead-scoring-tool
TRACING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=5

##@ Integration API Keys
# CRM Platforms
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=http://localhost:8000/auth/salesforce/callback

HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret

PIPEDRIVE_API_TOKEN=your_pipedrive_api_token
PIPEDRIVE_COMPANY_DOMAIN=your_pipedrive_domain

# Email Platforms
SENDGRID_API_KEY=your_sendgrid_api_key
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1

CONSTANT_CONTACT_API_KEY=your_constant_contact_api_key
CONSTANT_CONTACT_SECRET=your_constant_contact_secret

# Data Enrichment Services
CLEARBIT_API_KEY=your_clearbit_api_key
ZOOMINFO_API_KEY=your_zoominfo_api_key
LEADFEEDER_API_KEY=your_leadfeeder_api_key

# Social Media APIs
LINKEDIN_CLIENT_ID=your_linkedin_client_id  
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

##@ Payment Processing
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_STARTER=price_starter_plan_id
STRIPE_PRICE_PROFESSIONAL=price_professional_plan_id
STRIPE_PRICE_BUSINESS=price_business_plan_id

##@ Email Configuration
# SMTP Settings for Transactional Emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Email Templates
FROM_EMAIL=noreply@leadscoring.com
FROM_NAME=Lead Scoring Tool
SUPPORT_EMAIL=support@leadscoring.com

##@ Rate Limiting
# API Rate Limits (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_PREMIUM=5000
RATE_LIMIT_BURST_MULTIPLIER=2

# ML Inference Rate Limits
ML_RATE_LIMIT_PER_MINUTE=10000
ML_BATCH_SIZE_LIMIT=100

##@ Storage Configuration
# Object Storage (S3 Compatible)
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY_ID=minio
S3_SECRET_ACCESS_KEY=minio123
S3_BUCKET_NAME=lead-scoring-data
S3_REGION=us-east-1
S3_USE_SSL=false

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=csv,xlsx,json

##@ Security Headers
# CORS and Security Headers
SECURE_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true
HSTS_MAX_AGE=31536000

##@ Feature Flags
# Enable/Disable Features
FEATURE_ADVANCED_ML=true
FEATURE_REAL_TIME_SCORING=true
FEATURE_SOCIAL_MEDIA_INTEGRATION=false  
FEATURE_WHITE_LABEL=false
FEATURE_MULTI_TENANT=true
FEATURE_WEBHOOK_NOTIFICATIONS=true

# Beta Features (Use with caution)
BETA_PREDICTIVE_ANALYTICS=false
BETA_AUTOMATED_ROUTING=false
BETA_CUSTOM_MODELS=false

##@ Development Tools
# Development Mode Settings
RELOAD_ON_CHANGE=true
DEBUG_TOOLBAR_ENABLED=true
PROFILING_ENABLED=false
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@postgres:5432/test_db
TESTING_MODE=false
FIXTURE_PATH=tests/fixtures

##@ Production Overrides
# These should be overridden in production
# ENVIRONMENT=production  
# DEBUG=false
# DATABASE_URL=postgresql://user:pass@prod-db:5432/prod_db
# REDIS_URL=redis://prod-redis:6379/0
# JWT_SECRET_KEY=production-secret-key-256-bits-minimum