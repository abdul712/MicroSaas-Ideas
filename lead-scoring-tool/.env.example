# Lead Scoring Tool - Environment Configuration

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Primary Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/lead_scoring

# Connection Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===========================================
# CACHE & SESSION STORAGE
# ===========================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ===========================================
# ANALYTICS & LOGGING
# ===========================================

# ClickHouse Analytics Database
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=""
CLICKHOUSE_DATABASE=lead_scoring_analytics

# MongoDB Activity Logs
MONGODB_URL=mongodb://admin:admin@localhost:27017/lead_scoring_logs?authSource=admin
MONGODB_DATABASE=lead_scoring_logs

# ===========================================
# MESSAGE QUEUE & STREAMING
# ===========================================

# Apache Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=lead-scoring-api

# ===========================================
# MACHINE LEARNING
# ===========================================

# MLflow Model Registry
MLFLOW_TRACKING_URI=http://localhost:5000

# Model Storage
MODEL_STORE_PATH=./models

# Feature Store
FEATURE_STORE_REPO_PATH=./feature_repo

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Webhook Security
WEBHOOK_SECRET=webhook-secret-key-change-this

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=*

# ===========================================
# RATE LIMITING
# ===========================================

RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# FILE HANDLING
# ===========================================

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Settings (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# ===========================================
# EXTERNAL API INTEGRATIONS
# ===========================================

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Stripe (for payments)
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# HubSpot Integration
HUBSPOT_API_KEY=your-hubspot-api-key

# Salesforce Integration
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Metrics
ENABLE_METRICS=true

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Frontend Development
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Hot Reloading
WATCHDOG_ENABLE=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# SSL/TLS (Production)
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# CDN (Production)
CDN_URL=https://cdn.yourdomain.com

# Domain (Production)
DOMAIN=yourdomain.com

# ===========================================
# COMPLIANCE & SECURITY
# ===========================================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# Security Headers
ENABLE_SECURITY_HEADERS=true

# ===========================================
# BACKUP & RECOVERY
# ===========================================

# Database Backup
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ===========================================
# TESTING CONFIGURATION
# ===========================================

# Test Database
TEST_DATABASE_URL=sqlite:///./test.db

# Test Settings
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
ENABLE_ML_TRAINING=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true
ENABLE_INTEGRATIONS=true

# Beta Features
ENABLE_BETA_FEATURES=false

# ===========================================
# SCALING CONFIGURATION
# ===========================================

# Auto Scaling
AUTO_SCALE_ENABLED=false
MIN_WORKERS=1
MAX_WORKERS=10

# Load Balancing
LOAD_BALANCER_ENABLED=false

# ===========================================
# NOTES
# ===========================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env files to version control
# 3. Use strong, unique passwords and keys
# 4. Rotate secrets regularly in production
# 5. Use environment-specific configurations for different stages