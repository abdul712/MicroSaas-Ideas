# Database
DATABASE_URL="postgresql://username:password@localhost:5432/social_caption_generator"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# AI Services
OPENAI_API_KEY="sk-your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_APPLICATION_CREDENTIALS="path/to/google-cloud-credentials.json"
GOOGLE_CLOUD_PROJECT_ID="your-google-cloud-project"

# Vector Database
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"
PINECONE_INDEX_NAME="social-caption-embeddings"

# Redis (for caching and queues)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Social Media APIs
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"
LINKEDIN_API_KEY="your-linkedin-api-key"
LINKEDIN_API_SECRET="your-linkedin-api-secret"
INSTAGRAM_APP_ID="your-instagram-app-id"
INSTAGRAM_APP_SECRET="your-instagram-app-secret"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# File Storage
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Email Service
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# Rate Limiting
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Feature Flags
FEATURE_FLAG_CLAUDE_API="true"
FEATURE_FLAG_GEMINI_API="true"
FEATURE_FLAG_ADVANCED_ANALYTICS="true"
FEATURE_FLAG_TEAM_COLLABORATION="true"

# Development
NODE_ENV="development"
LOG_LEVEL="debug"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# Webhook URLs
WEBHOOK_BASE_URL="https://yourdomain.com/api/webhooks"

# API Rate Limits (requests per minute)
RATE_LIMIT_FREE_TIER="20"
RATE_LIMIT_CREATOR_TIER="100"
RATE_LIMIT_PROFESSIONAL_TIER="500"
RATE_LIMIT_AGENCY_TIER="2000"

# AI Model Configuration
DEFAULT_AI_MODEL="gpt-4-turbo"
FALLBACK_AI_MODEL="gpt-3.5-turbo"
IMAGE_ANALYSIS_MODEL="google-vision"

# Content Moderation
ENABLE_CONTENT_MODERATION="true"
MODERATION_THRESHOLD="0.8"

# Cache TTL (in seconds)
CACHE_TTL_USER_PROFILES="300"
CACHE_TTL_BRAND_VOICES="600"
CACHE_TTL_GENERATED_CAPTIONS="3600"

# Batch Processing
MAX_BATCH_SIZE="10"
BATCH_PROCESSING_ENABLED="true"

# Analytics & Reporting
ANALYTICS_RETENTION_DAYS="90"
ENABLE_USAGE_ANALYTICS="true"