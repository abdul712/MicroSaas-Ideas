# Database
DATABASE_URL="postgresql://username:password@localhost:5432/appointment_booking_widget"

# Authentication (Auth0)
AUTH0_SECRET="your-auth0-secret-key"
AUTH0_BASE_URL="http://localhost:3000"
AUTH0_ISSUER_BASE_URL="https://your-domain.auth0.com"
AUTH0_CLIENT_ID="your-auth0-client-id"
AUTH0_CLIENT_SECRET="your-auth0-client-secret"

# Payment Processing
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Google Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID="your-google-client-id"
GOOGLE_CALENDAR_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALENDAR_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# Microsoft Calendar Integration
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_REDIRECT_URI="http://localhost:3000/api/auth/microsoft/callback"

# Email Service (SendGrid)
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="Appointment Booking Widget"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Redis (for caching and queues)
REDIS_URL="redis://localhost:6379"

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_WIDGET_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# File Storage (Optional - for business logos, etc.)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_ENV="development"

# Security
NEXTAUTH_SECRET="your-nextauth-secret"
ENCRYPTION_KEY="your-32-character-encryption-key"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Webhook Security
WEBHOOK_SECRET="your-webhook-secret-key"

# Feature Flags
ENABLE_CALENDAR_SYNC="true"
ENABLE_SMS_NOTIFICATIONS="true"
ENABLE_PAYMENT_PROCESSING="true"
ENABLE_ANALYTICS="true"