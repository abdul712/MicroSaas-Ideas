# Database
DATABASE_URL="postgresql://username:password@localhost:5432/simple_crm?schema=public"
POSTGRES_USER=simple_crm_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=simple_crm

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars

# JWT
JWT_SECRET=your-jwt-secret-key-for-api-authentication

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Gmail OAuth (for email integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Outlook OAuth (for email integration)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# Environment
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# External Services
WEBHOOK_SECRET=your-webhook-secret-for-external-services

# Feature Flags
ENABLE_EMAIL_SYNC=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_WEBHOOKS=true
ENABLE_REAL_TIME=true

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id