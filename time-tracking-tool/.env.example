# Environment Configuration for Time Tracking Tool
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/timetracker"
DATABASE_PASSWORD="your_database_password"
DATABASE_PORT=5432

# Redis (for sessions and caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your_redis_password"
REDIS_PORT=6379

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Application Configuration
APP_PORT=3000
NODE_ENV="development"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@timetracker-pro.com"

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="timetracker-uploads"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
POSTHOG_KEY="your-posthog-key"

# Feature Flags
ENABLE_AUTOMATIC_TRACKING=true
ENABLE_DESKTOP_APP=true
ENABLE_MOBILE_APP=true
ENABLE_SCREENSHOTS=false
ENABLE_ACTIVITY_MONITORING=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL="info"
LOG_FILE_ENABLED=true
LOG_DATABASE_QUERIES=false