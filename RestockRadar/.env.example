# RestockRadar Environment Configuration
# Copy this file to .env.local and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://restockradar:password@localhost:5432/restockradar"
REDIS_URL="redis://localhost:6379"
CLICKHOUSE_URL="http://localhost:8123"

# Authentication
NEXTAUTH_SECRET="your-super-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Stripe Payment Processing
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Email Configuration
EMAIL_FROM="noreply@restockradar.com"
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""

# AI/ML Configuration
OPENAI_API_KEY=""
OPENAI_ORG_ID=""

# E-commerce Platform Integration
# Shopify
SHOPIFY_APP_KEY=""
SHOPIFY_APP_SECRET=""
SHOPIFY_SCOPES="read_products,write_products,read_inventory,write_inventory,read_orders"

# Amazon
AMAZON_ACCESS_KEY=""
AMAZON_SECRET_KEY=""
AMAZON_MARKETPLACE_ID=""
AMAZON_MERCHANT_ID=""

# eBay
EBAY_CLIENT_ID=""
EBAY_CLIENT_SECRET=""
EBAY_REDIRECT_URI="http://localhost:3000/api/integrations/ebay/callback"

# WooCommerce
WOOCOMMERCE_CONSUMER_KEY=""
WOOCOMMERCE_CONSUMER_SECRET=""

# File Storage
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Or use MinIO for development
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="restockradar"

# Message Queue (Kafka)
KAFKA_BROKERS="localhost:9092"
KAFKA_SECURITY_PROTOCOL="PLAINTEXT"

# Monitoring and Observability
SENTRY_DSN=""
DATADOG_API_KEY=""
PROMETHEUS_ENDPOINT="http://localhost:9090"

# ML Service
ML_SERVICE_URL="http://localhost:8000"
ML_SERVICE_API_KEY=""

# External Services
WEBHOOK_SECRET="your-webhook-secret"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_AI_FORECASTING=true
ENABLE_AUTO_REORDERING=true
ENABLE_MULTI_CURRENCY=true
ENABLE_ANALYTICS=true

# Development
NODE_ENV="development"
LOG_LEVEL="debug"
DEBUG="restockradar:*"