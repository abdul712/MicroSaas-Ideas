# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/restockradar"

# Redis
REDIS_URL="redis://localhost:6379"

# ClickHouse (Analytics Database)
CLICKHOUSE_URL="http://localhost:8123/default"
CLICKHOUSE_USER="default"
CLICKHOUSE_PASSWORD=""

# NextAuth.js
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="RestockRadar <noreply@restockradar.com>"

# Stripe (Payment Processing)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Shopify App Credentials
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_WEBHOOK_SECRET="your-webhook-secret"

# Amazon MWS/SP-API
AMAZON_ACCESS_KEY="your-amazon-access-key"
AMAZON_SECRET_KEY="your-amazon-secret-key"
AMAZON_MARKETPLACE_ID="your-marketplace-id"
AMAZON_SELLER_ID="your-seller-id"

# eBay API
EBAY_APP_ID="your-ebay-app-id"
EBAY_CERT_ID="your-ebay-cert-id"
EBAY_DEV_ID="your-ebay-dev-id"
EBAY_USER_TOKEN="your-ebay-user-token"

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# SendGrid (Email Notifications)
SENDGRID_API_KEY="your-sendgrid-api-key"

# AWS (File Storage, SES)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="restockradar-uploads"

# OpenAI (for AI features)
OPENAI_API_KEY="sk-..."

# Google Analytics
GA_TRACKING_ID="UA-XXXXXXXXX-X"

# Sentry (Error Tracking)
SENTRY_DSN="https://...@sentry.io/..."

# Environment
NODE_ENV="development"
PORT=3000

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Caching
CACHE_TTL=3600

# ML Model Configuration
ML_MODEL_RETRAIN_INTERVAL=86400  # 24 hours
ML_MODEL_MIN_DATA_POINTS=30
ML_FORECAST_CONFIDENCE_THRESHOLD=70

# Integration Sync Intervals (seconds)
SHOPIFY_SYNC_INTERVAL=300    # 5 minutes
AMAZON_SYNC_INTERVAL=900     # 15 minutes
EBAY_SYNC_INTERVAL=600       # 10 minutes

# Notification Settings
LOW_STOCK_ALERT_ENABLED=true
REORDER_ALERT_ENABLED=true
FORECAST_ALERT_ENABLED=true
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL="info"

# Feature Flags
ENABLE_AI_FORECASTING=true
ENABLE_MULTI_CHANNEL_SYNC=true
ENABLE_AUTOMATED_REORDERING=true
ENABLE_SUPPLIER_MANAGEMENT=true
ENABLE_ADVANCED_ANALYTICS=true