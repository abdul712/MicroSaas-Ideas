# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/meeting_notes_organizer"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# OpenAI API
OPENAI_API_KEY="your-openai-api-key"

# Redis (for job queues and caching)
REDIS_URL="redis://localhost:6379"

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_REGION="us-east-1"

# Elasticsearch (for search)
ELASTICSEARCH_URL="http://localhost:9200"

# WebSocket Server
NEXT_PUBLIC_SOCKET_URL="ws://localhost:3001"

# Application Settings
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED=1

# Email (optional, for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Calendar Integration
GOOGLE_CALENDAR_API_KEY="your-google-calendar-api-key"
MICROSOFT_GRAPH_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_GRAPH_CLIENT_SECRET="your-microsoft-client-secret"

# Webhook URLs (for integrations)
SLACK_WEBHOOK_URL="your-slack-webhook-url"
TEAMS_WEBHOOK_URL="your-teams-webhook-url"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_RECORDING_DURATION_MINUTES=120