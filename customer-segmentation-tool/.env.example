# Database
DATABASE_URL="postgresql://username:password@localhost:5432/customer_segmentation?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Redis (for caching and real-time features)
REDIS_URL="redis://localhost:6379"

# ML Service (Python/FastAPI backend)
ML_SERVICE_URL="http://localhost:8000"
ML_SERVICE_API_KEY="your-ml-service-api-key"

# Email Service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Analytics
POSTHOG_KEY="your-posthog-key"
SENTRY_DSN="your-sentry-dsn"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="customer-segmentation-uploads"

# Feature Flags
ENABLE_ML_FEATURES="true"
ENABLE_REAL_TIME_UPDATES="true"
ENABLE_ADVANCED_ANALYTICS="true"

# Environment
NODE_ENV="development"
LOG_LEVEL="debug"