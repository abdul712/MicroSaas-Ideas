# Application Configuration
NODE_ENV=development
APP_URL=http://localhost:3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/email_automator_dev"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME="Your App Name"

# AWS SES Configuration (Backup Email Provider)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# InfluxDB Configuration (Analytics)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=email_analytics

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Email Queue Configuration
EMAIL_QUEUE_CONCURRENCY=10
EMAIL_QUEUE_MAX_RETRIES=3
EMAIL_QUEUE_DELAY_MS=1000

# Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# File Storage (AWS S3)
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_REGION=us-east-1

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_MULTI_CHANNEL=false