# Database
DATABASE_URL="postgresql://cloudphone:cloudphone_password@localhost:5432/cloudphone_db"

# NextAuth.js
NEXTAUTH_SECRET="your-super-secret-jwt-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Redis
REDIS_URL="redis://localhost:6379"

# WebRTC Signaling Server
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# Application
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Storage (AWS S3 for call recordings and voicemails)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="cloudphone-recordings"

# VoIP Provider (Twilio for PSTN connectivity)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"